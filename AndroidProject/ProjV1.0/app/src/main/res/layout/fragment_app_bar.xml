<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AppBar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/palette_primary"
        android:paddingHorizontal="16dp">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@id/tv_2"
            android:paddingHorizontal="4dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/shrikhand_regular"
            android:gravity="center_vertical"

            android:text="@string/logo"
            android:textColor="@color/palette_secondary"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:backgroundTint="#44222F"
            android:fontFamily="@font/quicksand_semibold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Your food is waiting"
            android:textColor="@color/palette_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>